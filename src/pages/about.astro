  text-align: center;
  font-size: 1.2rem;
  color: #4A5568;
  margin-bottom: 3rem;
}
.content h2 {
  font-size: 1.8rem;
  font-weight: bold;
  color: #121212;
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  border-bottom: 2px solid rgb(var(--accent));
  padding-bottom: 0.5rem;
}
.content p, .content ul {
  line-height: 1.8;
  font-size: 1.1rem;
  color: #4A5568;
}
