import { app } from "@firebase/server";
import { getAuth } from "firebase-admin/auth";
import type { APIRoute } from "astro";

export const POST: APIRoute = async ({ request, cookies }) => {
  const auth = getAuth(app);

  try {
    const { idToken } = await request.json();
    if (!idToken) {
      return new Response("ID token is missing", { status: 400 });
    }

    const expiresIn = 60 * 60 * 24 * 5 * 1000; // 5 days
    const sessionCookie = await auth.createSessionCookie(idToken, { expiresIn });

    cookies.set("session", sessionCookie, {
      path: "/",
      httpOnly: true,
      secure: true,
      maxAge: expiresIn / 1000,
    });

    return new Response("Logged in successfully", { status: 200 });

  } catch (error) {
    console.error("Error in /api/auth/login:", error);
    // This will catch errors if the request body is not valid JSON
    return new Response("Invalid request body. Expected JSON.", { status: 400 });
  }
};
