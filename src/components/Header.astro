---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
const logoUrl = "https://i.postimg.cc/63QwKcn4/logo-(1).png";
---

<header>
  <nav>
    <div class="brand">
      <a href="/">
        <img src={logoUrl} alt="StudyWithUs Logo" class="logo" />
        <span class="site-title">{SITE_TITLE}</span>
      </a>
    </div>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <div id="admin-auth-link-container" class="auth-link-wrapper"></div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const adminAuthContainer = document.getElementById('admin-auth-link-container');
    const pathname = window.location.pathname.replace(import.meta.env.BASE_URL, '');

    const createLink = (href, text) => {
        const link = document.createElement('a');
        link.href = href;
        link.textContent = text;
        // Use the exact same class as HeaderLink for consistent styling
        link.classList.add('header-nav-link'); 
        
        const subpath = pathname.match(/[^\/]+/g);
        const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
        if (isActive) {
          link.classList.add('active');
        }

        return link.outerHTML;
    };

    const hasSessionCookie = () => document.cookie.split(';').some((item) => item.trim().startsWith('session='));

    if (hasSessionCookie()) {
      adminAuthContainer.innerHTML = createLink("/api/auth/logout", "Logout");
    } else {
      adminAuthContainer.innerHTML = createLink("/admin/login", "Admin");
    }
  });
</script>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #f6f6f6;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  .brand a {
    display: flex;
    align-items: center;
    padding: 0.5em 0;
    text-decoration: none;
  }
  .logo {
    height: 30px;
    width: auto;
    margin-right: 0.5em;
  }
  .site-title {
    font-size: 1.2em;
    font-weight: bold;
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .internal-links {
    display: flex;
    align-items: center;
  }
  .auth-link-wrapper {
      display: contents;
  }

  /* Single style rule for ALL navigation links */
  :global(.header-nav-link) {
    display: inline-block;
		text-decoration: none;
    padding: 1em 0.5em;
    color: #121212;
    border-bottom: 4px solid transparent;
  }

  :global(.header-nav-link.active), 
  :global(.header-nav-link:hover) {
		font-weight: bolder;
		text-decoration: none;
    border-bottom-color: var(--accent);
	}
</style>