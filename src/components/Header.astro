---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
const logoUrl = "https://i.postimg.cc/63QwKcn4/logo-(1).png";
---

<header>
  <nav>
    <div class="brand">
      <a href="/">
        <img src={logoUrl} alt="StudyWithUs Logo" class="logo" />
        <span class="site-title">{SITE_TITLE}</span>
      </a>
    </div>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <!-- This will be dynamically replaced -->
      <div id="admin-auth-link-container">
        <HeaderLink href="/admin/login">Admin</HeaderLink>
      </div>
    </div>
  </nav>
</header>

<script>
  // This script runs on the client to dynamically change the Admin/Logout link
  document.addEventListener('DOMContentLoaded', () => {
    const adminAuthContainer = document.getElementById('admin-auth-link-container');

    // Function to check for the session cookie
    const hasSessionCookie = () => {
      return document.cookie.split(';').some((item) => item.trim().startsWith('session='));
    };

    if (hasSessionCookie()) {
      // If cookie exists, show Logout link
      adminAuthContainer.innerHTML = '<a href="/api/auth/logout" class="header-link">Logout</a>';
    } else {
      // If no cookie, show Admin login link
      adminAuthContainer.innerHTML = '<a href="/admin/login" class="header-link">Admin</a>';
    }
  });
</script>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #f6f6f6;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  .brand a {
    display: flex;
    align-items: center;
    padding: 0.5em 0;
    text-decoration: none;
  }
  .logo {
    height: 30px;
    width: auto;
    margin-right: 0.5em;
  }
  .site-title {
    font-size: 1.2em;
    font-weight: bold;
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .internal-links {
    display: flex;
    align-items: center;
  }
  /* General link styling within the header */
  .internal-links a,
  .header-link /* Class for dynamically added links */
  {
    padding: 1em 0.5em;
    color: #121212;
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  .internal-links a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
</style>