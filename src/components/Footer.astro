<style>
  .site-footer {
    background-color: #1a1a1a; 
    color: #a0aec0; 
    padding: 3rem 1.5rem 1.5rem;
    font-size: 0.9rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
    padding-bottom: 2rem;
  }

  .footer-about h3, .footer-links h4, .footer-legal h4, .footer-social h4 {
    color: #ffffff;
    font-weight: bold;
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .footer-about p {
    line-height: 1.6;
  }

  .footer-links ul, .footer-legal ul {
    list-style: none;
    padding: 0;
  }

  .footer-links li, .footer-legal li {
    margin-bottom: 0.75rem;
  }

  .footer-links a, .footer-legal a {
    color: #a0aec0;
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-links a:hover, .footer-legal a:hover {
    color: #ffffff;
    text-decoration: underline;
  }

  .footer-copyright {
    border-top: 1px solid #333;
    padding-top: 1.5rem;
    text-align: center;
    font-size: 0.85rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .social-icons {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .social-icons a {
    color: #a0aec0;
    font-size: 1.5rem;
    transition: color 0.3s;
    text-align: center;
  }

  .social-icons a:hover {
    color: #ffffff;
  }
</style>